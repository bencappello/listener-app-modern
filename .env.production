# Production Environment Configuration

# Application
APP_ENV=production
DEBUG=false
# SECRET_KEY should be set in the actual environment, not in this file

# API
API_HOST=0.0.0.0
API_PORT=8000
API_CORS_ORIGINS=https://listenerapp.com

# Database
DB_HOST=db.production.example.com
DB_PORT=5432
DB_NAME=listener_prod
DB_USER=dbuser
# DB_PASSWORD should be set in the actual environment, not in this file
# DATABASE_URL will be constructed from the above or set directly in the environment

# Redis
REDIS_HOST=redis.production.example.com
REDIS_PORT=6379
REDIS_DB=0
# REDIS_URL will be constructed from the above or set directly in the environment

# JWT Authentication
# JWT_SECRET should be set in the actual environment, not in this file
JWT_ALGORITHM=HS256
JWT_EXPIRATION=1440  # minutes (24 hours)

# AWS Configuration
# AWS credentials should be set in the actual environment, not in this file
AWS_REGION=us-west-2
AWS_S3_BUCKET=listener-app-production

# Frontend
FRONTEND_URL=https://listenerapp.com
REACT_APP_API_URL=https://api.listenerapp.com 